' Proceso de Postulacion Laboral

start

:Empresa publica oportunidad;
:Sistema notifica estudiantes;
:Estudiante revisa oportunidad;

if (Interesado?) then (Si)
  if (Cumple requisitos?) then (Si)
    :Subir CV actualizado;
    :Enviar postulacion;
    :Empresa revisa postulaciones;
    
    if (Preseleccionado?) then (Si)
      :Programar entrevista;
      :Realizar entrevista;
      
      if (Entrevista exitosa?) then (Si)
        :Recibir oferta laboral;
        
        if (Acepta oferta?) then (Si)
          :Iniciar contratacion;
        else (No)
          :Rechazar oferta;
        endif
      else (No)
        :Entrevista no exitosa;
      endif
    else (No)
      :No preseleccionado;
    endif
  else (No)
    :No cumple requisitos;
  endif
else (No)
  :No interesado;
endif

stop

